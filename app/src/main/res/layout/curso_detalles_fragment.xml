<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:padding="4dp"
    android:background="#ffff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/view1curso"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/hola_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.037" />

        <TextView
            android:id="@+id/texto_bienvenida"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Hola Juan PÃ©rez!"
            android:textColor="#440E5D"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/pendientes_curso"
            app:layout_constraintEnd_toEndOf="@+id/view1curso"
            app:layout_constraintStart_toEndOf="@+id/foto_usuario"
            app:layout_constraintTop_toTopOf="@+id/foto_usuario" />

        <TextView
            android:id="@+id/pendientes_curso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tienes 3 tareas pendientes"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/foto_usuario"
            app:layout_constraintEnd_toEndOf="@+id/texto_bienvenida"
            app:layout_constraintStart_toStartOf="@+id/texto_bienvenida"
            app:layout_constraintTop_toTopOf="@+id/view1curso"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/foto_usuario"
            android:layout_width="76dp"
            android:layout_height="63dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/foto_perfil"
            app:layout_constraintBottom_toBottomOf="@+id/view1curso"
            app:layout_constraintStart_toStartOf="@+id/view1curso"
            app:layout_constraintTop_toTopOf="@+id/view1curso" />

        <Button
            android:id="@+id/curso_detalles_promedios"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_curso_tema"
            android:text="@string/menu_promedios"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curso_detalles_nombre"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/curso_detalle_imagenes"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_curso_imagenes"
            android:text="Imagenes"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curso_detalles_archivos"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/curso_detalles_calendario"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_curso_calendario"
            android:text="Calendario"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curso_detalle_imagenes"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/curso_detalles_notas_de_voz"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_curso_tareas"
            android:text="Notas de Voz"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curso_detalles_calendario"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/curso_detalles_archivos"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_curso_archivos"
            android:text="Archivos"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curso_detalles_promedios"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/curso_detalles_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/curso_nombre"
            android:textAlignment="center"
            android:textColor="@color/colorOnSeconddary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1curso"
            app:layout_constraintVertical_bias="0.034" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ProgressBar
            android:id="@+id/progressBar_curso_detalles"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
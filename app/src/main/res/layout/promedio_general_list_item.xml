<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/promedio_general_list_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/promedio_general_list_item_nota"
        android:layout_width="107dp"
        android:layout_height="0dp"
        android:background="@color/md_green_600"
        android:ellipsize="start"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="80sp"
        android:text="15.62"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    </androidx.appcompat.widget.AppCompatTextView>

    <TextView
        android:id="@+id/promedio_general_list_item_titulo_curso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintTop_toTopOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/promedio_general_list_item_detalle_curso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:autoSizeTextType="uniform"
        android:text="TextView sdome text really relly big buit syill doable by this motherfucking shit  still cna i addd more of this text that i dont e llok ther es spacevne read"
        app:layout_constraintBottom_toTopOf="@+id/promedio_general_list_item_progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintTop_toBottomOf="@+id/promedio_general_list_item_titulo_curso"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/promedio_general_list_item_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintTop_toTopOf="@+id/promedio_general_list_item_nota"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>